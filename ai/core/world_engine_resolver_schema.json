{
  "name": "gameplay_loop",
  "strict": false,
  "schema": {
    "type": "object",
    "properties": {
      "narrative": {
        "type": "string",
        "description": "The AI-generated narrative response describing the player's action outcome, the world reaction, or new developments."
      },
      "actions": {
        "type": "object",
        "description": "Actions to update the game state based on the player's input and the narrative outcome.",
        "properties": {
          "createRegion": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "id": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "climate": {
                "type": "string"
              },
              "resources": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "tier": {
                "type": "integer"
              },
              "connectedRegions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "name",
              "id",
              "description",
              "climate",
              "resources",
              "tier",
              "connectedRegions"
            ],
            "additionalProperties": false
          },
          "awardXp": {
            "type": "object",
            "properties": {
              "characterId": {
                "type": "string"
              },
              "amount": {
                "type": "integer"
              }
            },
            "required": [
              "characterId",
              "amount"
            ],
            "additionalProperties": false
          },
          "createNpc": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "The chosen name for the character."
                },
                "description": {
                  "type": "string",
                  "description": "A physical description of the character."
                },
                "race": {
                  "type": "string",
                  "description": "Identifier for chosen race for the character."
                },
                "archetype": {
                  "type": "string",
                  "description": "Identifier for chosen archetype for the character."
                },
                "profession": {
                  "type": "string",
                  "description": "Identifier for chosen profession for the character."
                },
                "startingRegion": {
                  "type": "string",
                  "description": "lowercase region name with non-alphanumeric characters and spaces replaced with _"
                },
                "strength": {
                  "type": "integer"
                },
                "dexterity": {
                  "type": "integer"
                },
                "intelligence": {
                  "type": "integer"
                },
                "constitution": {
                  "type": "integer"
                },
                "wisdom": {
                  "type": "integer"
                },
                "charisma": {
                  "type": "integer"
                },
                "maxHealth": {
                  "type": "integer"
                },
                "currentHealth": {
                  "type": "integer"
                },
                "maxMana": {
                  "type": "integer"
                },
                "currentMana": {
                  "type": "integer"
                },
                "raceAbilities": {
                  "type": "string"
                },
                "professionAbilities": {
                  "type": "string"
                },
                "armorType": {
                  "type": "string"
                },
                "level": {
                  "type": "integer"
                },
                "xp": {
                  "type": "integer"
                },
                "equippedWeapon": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "description",
                "race",
                "archetype",
                "profession",
                "startingRegion",
                "strength",
                "dexterity",
                "intelligence",
                "constitution",
                "wisdom",
                "charisma",
                "maxHealth",
                "currentHealth",
                "maxMana",
                "currentMana",
                "raceAbilities",
                "professionAbilities",
                "armorType",
                "level",
                "xp",
                "equippedWeapon"
              ],
              "additionalProperties": false
            }
          },
          "advanceQuest": {
            "type": "object",
            "properties": {
              "characterId": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "step": {
                "type": "integer"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "characterId",
              "name",
              "step",
              "description"
            ],
            "additionalProperties": false
          },
          "lootDrop": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "grade": {
                  "type": "string",
                  "description": "Grade is related to level requirement and can be E,D,C,B,A,S"
                },
                "level": {
                  "type": "integer",
                  "description": "item level determines overall power and upgradability"
                },
                "slot": {
                  "type": "string"
                },
                "armorType": {
                  "type": "string",
                  "description": "If item is armor it can be cloth, leather, chain, or plate"
                },
                "quality": {
                  "type": "string",
                  "description": "common, uncommon, rare, epic, legendary"
                },
                "primaryAbilities": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "secondaryAbilities": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "name",
                "grade",
                "level",
                "slot",
                "quality",
                "primaryAbilities",
                "secondaryAbilities"
              ],
              "additionalProperties": false
            }
          },
          "worldEventTrigger": {
            "type": "object",
            "properties": {
              "eventId": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "characterId": {
                "type": "string",
                "description": "Id of the character that triggered the event"
              },
              "characterName": {
                "type": "string",
                "description": "Name of the character that triggered the event"
              }
            },
            "required": [
              "eventId",
              "name",
              "description",
              "characterId",
              "characterName"
            ],
            "additionalProperties": false
          },
          "spawnEnemy": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "enemyId": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "level": {
                  "type": "integer"
                },
                "description": {
                  "type": "string"
                },
                "maxHealth": {
                  "type": "integer"
                },
                "currentHealth": {
                  "type": "integer"
                },
                "maxMana": {
                  "type": "integer"
                },
                "currentMana": {
                  "type": "integer"
                },
                "abilities": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "known abilities and special attacks"
                  }
                }
              },
              "required": [
                "enemyId",
                "name",
                "level",
                "description"
              ],
              "additionalProperties": false
            }
          },
          "factionChange": {
            "type": "object",
            "properties": {
              "characterId": {
                "type": "string"
              },
              "name": {
                "type": "string",
                "description": "Name of the faction"
              },
              "change": {
                "type": "integer",
                "description": "Change in faction standing"
              },
              "effect": {
                "type": "string",
                "description": "Effects, abilities, or penalties from the faction"
              }
            },
            "required": [
              "characterId",
              "name",
              "change"
            ],
            "additionalProperties": false
          },
          "updateCharacter": {
            "type": "object",
            "description": "Update character information",
            "properties": {
              "characterId": {
                "type": "string"
              },
              "professionAbilities": {
                "type": "array",
                "items": {
                  "type": "string",
                  "description": "Gain or lose profession or archetype-based abilities"
                }
              },
              "raceAbilities": {
                "type": "array",
                "items": {
                  "type": "string",
                  "description": "Gain or lose race-based abilities"
                }
              },
              "inventoryItems": {
                "type": "array",
                "items": {
                  "type": "string",
                  "description": "Gain or lose inventory items"
                }
              },
              "quests": {
                "type": "array",
                "items": {
                  "type": "object",
                  "description": "Gain, advance, complete or fail a quest",
                  "properties": {
                    "questId": {
                      "type": "integer"
                    },
                    "step": {
                      "type": "integer"
                    },
                    "description": {
                      "type": "string"
                    },
                    "status": {
                      "type": "integer",
                      "description": "Active, completed, failed"
                    }
                  }
                }
              }
            },
            "required": [
              "characterId"
            ],
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "required": [
      "narrative"
    ],
    "additionalProperties": false
  }
}