{
  "name": "region_creation",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "narrative": {
        "type": "string",
        "description": "The AI generated narrative of the region creation or related output."
      },
      "actions": {
        "type": "object",
        "description": "Actions associated with the region creation.",
        "properties": {
          "createRegion": {
            "type": "object",
            "description": "Details for creating a region.",
            "properties": {
              "name": {
                "type": "string",
                "description": "The chosen name for the region."
              },
              "id": {
                "type": "string",
                "description": "Identifier for the region with non-alphanumeric characters and spaces replaced with _."
              },
              "description": {
                "type": "string",
                "description": "Description of the region."
              },
              "climate": {
                "type": "string",
                "description": "Climate type of the region."
              },
              "resources": {
                "type": "array",
                "description": "Resources available in the region.",
                "items": {
                  "type": "string"
                }
              },
              "levelTier": {
                "type": "integer",
                "description": "The level tier of the region (1â€“5)."
              },
              "connectedRegions": {
                "type": "array",
                "description": "List of connected region IDs this region links to.",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "name",
              "id",
              "description",
              "climate",
              "resources",
              "levelTier",
              "connectedRegions"
            ],
            "additionalProperties": false
          },
          "logEvent": {
            "type": "object",
            "description": "Logging the event details after region creation.",
            "properties": {
              "type": {
                "type": "string",
                "description": "Type of the log event."
              },
              "details": {
                "type": "object",
                "description": "Details of the log event.",
                "properties": {
                  "region": {
                    "type": "string",
                    "description": "Name of created region."
                  }
                },
                "required": [
                  "region"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "type",
              "details"
            ],
            "additionalProperties": false
          },
          "updateCharacter": {
            "type": "object",
            "description": "Updating the character's new location after moving into the region.",
            "properties": {
              "characterId": {
                "type": "string",
                "description": "Unique identifier for the character."
              },
              "newRegionId": {
                "type": "string",
                "description": "The region ID where the character has moved."
              }
            },
            "required": [
              "characterId",
              "newRegionId"
            ],
            "additionalProperties": false
          },
          "createNpc": {
            "type": "array",
            "description": "List of NPCs that appear in the narrative description.",
            "items": {
              "type": "object",
              "properties": {
                "npcId": {
                  "type": "string",
                  "description": "Unique identifier for the NPC."
                },
                "name": {
                  "type": "string",
                  "description": "The name of the NPC."
                },
                "role": {
                  "type": "string",
                  "description": "The role or function of the NPC (e.g., merchant, guard, quest-giver)."
                },
                "description": {
                  "type": "string",
                  "description": "A short description of the NPC's appearance or personality."
                }
              },
              "required": [
                "npcId",
                "name",
                "role",
                "description"
              ],
              "additionalProperties": false
            }
          },
          "updateConnectedRegions": {
            "type": "array",
            "description": "List of updates for existing connected regions to include this new region in their connections.",
            "items": {
              "type": "object",
              "properties": {
                "regionId": {
                  "type": "string",
                  "description": "The ID of the connected region being updated."
                },
                "addConnectedRegionId": {
                  "type": "string",
                  "description": "The ID of the new region being added to the connected region's connections."
                }
              },
              "required": [
                "regionId",
                "addConnectedRegionId"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "createRegion",
          "logEvent",
          "updateCharacter",
          "createNpc",
          "updateConnectedRegions"
        ],
        "additionalProperties": false
      }
    },
    "required": [
      "narrative",
      "actions"
    ],
    "additionalProperties": false
  }
}