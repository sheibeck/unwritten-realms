{
  "name": "character_creation",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "narrative": {
        "type": "string",
        "description": "The AI generated narrative of the character creation or related output."
      },
      "actions": {
        "type": "object",
        "description": "Actions associated with the character creation.",
        "properties": {
          "createCharacter": {
            "type": "object",
            "description": "Details for creating a character.",
            "properties": {
              "name": {
                "type": "string",
                "description": "The chosen name for the character."
              },
              "description": {
                "type": "string",
                "description": "A physical description of the character."
              },
              "race": {
                "type": "string",
                "description": "Identifier for chosen race for the character."
              },
              "archetype": {
                "type": "string",
                "description": "Identifier for chosen archetype for the character."
              },
              "profession": {
                "type": "string",
                "description": "Identifier for chosen profession for the character."
              },
              "startingRegion": {
                "type": "string",
                "description": "lowercase region name with non-alphanumeric characters and spaces replaced with _"
              },
              "strength": {
                "type": "integer",
                "description": "Strength attribute of the character."
              },
              "dexterity": {
                "type": "integer",
                "description": "Dexterity attribute of the character."
              },
              "intelligence": {
                "type": "integer",
                "description": "Intelligence attribute of the character."
              },
              "constitution": {
                "type": "integer",
                "description": "Constitution attribute of the character."
              },
              "wisdom": {
                "type": "integer",
                "description": "Wisdom attribute of the character."
              },
              "charisma": {
                "type": "integer",
                "description": "Charisma attribute of the character."
              },
              "maxHealth": {
                "type": "integer",
                "description": "Maximum health of the character."
              },
              "currentHealth": {
                "type": "integer",
                "description": "Current health of the character."
              },
              "maxMana": {
                "type": "integer",
                "description": "Maximum mana of the character."
              },
              "currentMana": {
                "type": "integer",
                "description": "Current mana of the character."
              },
              "raceAbilities": {
                "type": "string",
                "description": "Abilities associated with the character's race."
              },
              "professionAbilities": {
                "type": "string",
                "description": "Abilities associated with the character's profession."
              },
              "armorType": {
                "type": "string",
                "description": "Armor type associated with the character's profession."
              },
              "level": {
                "type": "integer",
                "description": "Level of the character."
              },
              "xp": {
                "type": "integer",
                "description": "Experience points of the character."
              },
              "equippedWeapon": {
                "type": "string",
                "description": "Equipped weapon used by the character"
              }
            },
            "required": [
              "name",
              "description",
              "race",
              "archetype",
              "profession",
              "startingRegion",
              "strength",
              "dexterity",
              "intelligence",
              "constitution",
              "wisdom",
              "charisma",
              "maxHealth",
              "currentHealth",
              "maxMana",
              "currentMana",
              "raceAbilities",
              "professionAbilities",
              "armorType",
              "level",
              "xp",
              "equippedWeapon"
            ],
            "additionalProperties": false
          },
          "createRace": {
            "type": "object",
            "description": "Details for creating a race.",
            "properties": {
              "id": {
                "type": "string",
                "description": "race name with non-alphanumeric characters and spaces replaced with _"
              },
              "name": {
                "type": "string",
                "description": "The name of the race."
              },
              "abilities": {
                "type": "string",
                "description": "Starting abilities of the race."
              }
            },
            "required": [
              "id",
              "name",
              "abilities"
            ],
            "additionalProperties": false
          },
          "createProfession": {
            "type": "object",
            "description": "Details for creating a profession.",
            "properties": {
              "id": {
                "type": "string",
                "description": "lowercase profession name with non-alphanumeric characters and spaces replaced with _"
              },
              "name": {
                "type": "string",
                "description": "The name of the profession."
              },
              "abilities": {
                "type": "string",
                "description": "Starting abilities of the profession."
              }
            },
            "required": [
              "id",
              "name",
              "abilities"
            ],
            "additionalProperties": false
          },
          "logEvent": {
            "type": "object",
            "description": "Logging the event details after character creation.",
            "properties": {
              "type": {
                "type": "string",
                "description": "Type of the log event."
              },
              "details": {
                "type": "object",
                "description": "Details of the log event.",
                "properties": {
                  "character": {
                    "type": "string",
                    "description": "Name of created character"
                  },
                  "startingRegion": {
                    "type": "string",
                    "description": "Identifier for the starting region."
                  }
                },
                "required": [
                  "character",
                  "startingRegion"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "type",
              "details"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "createCharacter",
          "createRace",
          "createProfession",
          "logEvent"
        ],
        "additionalProperties": false
      }
    },
    "required": [
      "narrative",
      "actions"
    ],
    "additionalProperties": false
  }
}